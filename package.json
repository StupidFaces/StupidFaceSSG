{
  "name": "stupid-faces",
  "version": "1.0.0",
  "description": "Stupid Faces",
  "scripts": {
    "build-dev:webpack": "webpack",
    "watch:webpack": "webpack --watch",
    "watch:eleventy": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "dev": "npm-run-all clean build-dev:webpack --parallel watch:*",
    "build:webpack": "cross-env NODE_ENV=production webpack --mode production",
    "build:eleventy": "cross-env ELEVENTY_ENV=production eleventy",
    "build": "run-s clean build:*",
    "serve:local": "serve _site",
    "serve": "run-s build serve:local",
    "clean": "rimraf _site",
    "format:js": "prettier '**/*.js' --write && eslint '**/*.js' --fix",
    "format:json": "prettier '**/*.json' --write",
    "format": "run-s format:*",
    "lint": "eslint --ext .js .",
    "shuffle": "node ./build/shuffleBot/shuffleBot.js",
    "gen:meta": "node ./build/arc69gen/arc69gen.js",
    "gen:hodlers": "node ./build/blockchainData/getHodlers.js",
    "gen:markdown:dev": "cross-env NODE_ENV=development node ./build/blockchainData/getImages.js",
    "gen:markdown:prod": "NODE_ENV=production node ./build/blockchainData/getImages.js",
    "upload:dev:faceOfTheMonth": "cross-env NODE_ENV=development node ./build/database/syncFaceOfTheMonth.js",
    "upload:prod:faceOfTheMonth": "cross-env NODE_ENV=production node ./build/database/syncFaceOfTheMonth.js"
  },
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.1",
    "@randlabs/myalgo-connect": "^1.3.1",
    "algosdk": "^1.22.0",
    "autoprefixer": "^10.2.6",
    "copy-webpack-plugin": "^9.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "cssnano": "^5.0.4",
    "date-fns": "^2.21.3",
    "dotenv": "^16.0.3",
    "eleventy-plugin-lazyimages": "^2.1.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.3",
    "file-loader": "^6.2.0",
    "glob": "^7.1.7",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.3.8",
    "image-webpack-loader": "^8.1.0",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "pg": "^8.8.0",
    "postcss-loader": "^5.3.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "serve": "^14.0.1",
    "tailwindcss": "^2.1.2",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
